<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techroof.pkpropertyzone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".ApplicationContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SellerViewPropertyActivity"/>
        <activity
            android:name=".PropertyActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".AreasActivity" />
        <activity android:name=".CitiesActivity" />
        <activity android:name=".Chat.ConversationActivity" />
        <activity android:name=".Chat.ChatActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".BuyProperty.ViewPropertyActivity" />
        <activity android:name=".Authentication.RegisterActivity" />
        <activity android:name=".Authentication.LoginActivity" />
        <activity android:name=".SellProperty.AddPropertyActivity" />
        <activity android:name=".BuyProperty.BuyPropertyActivity" />
        <activity android:name=".SellProperty.SellPropertyActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_id" />
    </application>

</manifest>